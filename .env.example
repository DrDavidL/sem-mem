# Sem-Mem Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Required: OpenAI API Key
OPENAI_API_KEY=sk-your-key-here

# Optional: Memory storage directory (default: ./local_memory)
MEMORY_STORAGE_DIR=./local_memory

# Optional: L1 cache size (default: 20)
CACHE_SIZE=20

# Optional: Embedding model (default: text-embedding-3-small)
EMBEDDING_MODEL=text-embedding-3-small

# Optional: API server URL for client apps (default: http://localhost:8000)
SEMMEM_API_URL=http://localhost:8000
